{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "~components/*": [
        "src/components/*"
      ],
      "~decorators/*": [
        "src/decorators/*"
      ],
      "~helpers/*": [
        "src/helpers/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
